@model BeginTestModel
@{
    ViewData["Title"] = "BeginTest";
}
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div style="color:red" class="alert alert-danger">@ViewBag.ErrorMessage</div>
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BeginTest</title>
    <link rel="stylesheet" href="~/css/beginteststyle.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>
<body align="center">
    
    <form asp-action="BeginExam" method="post">
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email address</label>
            <input asp-for="Email" class="form-control" width:"10%">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" asp-controller="Email" asp-action="BeginTest">Begin Exam</button>
    </form>
    
</body>

</html>
